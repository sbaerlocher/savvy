# Database Configuration
DATABASE_URL=postgres://savvy:savvy_dev_password@localhost:5432/savvy?sslmode=disable

# Server Configuration
GO_ENV=development
ADDR=0.0.0.0
PORT=3000

# Session Secret (CRITICAL: Change in production!)
# Generate a random 32+ character string for production
SESSION_SECRET=your-secret-key-change-in-production

# Database Migrations (Gormigrate)
# Auto-apply migrations on server startup (recommended: true for development, false for production)
# Set to false in production and run migrations manually via: make migrate-up
AUTO_MIGRATE=true

# OpenTelemetry Configuration
# Note: OTEL_ENABLED defaults to true in production (GO_ENV=production)
# Set to false explicitly to disable in production (not recommended)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4318
OTEL_SERVICE_NAME=savvy
OTEL_SERVICE_VERSION=1.1.0

# Observability Endpoints (automatically available)
# - GET /metrics - Prometheus metrics (HTTP duration, error rate, resource counts, DB stats)
# - GET /health  - Kubernetes liveness probe
# - GET /ready   - Kubernetes readiness probe (checks DB connection)

# OAuth/OIDC Authentication - Optional
# Works with any OIDC provider (Authentik, Keycloak, Auth0, Okta, etc.)
# Leave empty to disable OAuth and use email/password login only
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_ISSUER=https://auth.example.com/application/o/your-app/
OAUTH_REDIRECT_URL=http://localhost:3000/auth/oauth/callback

# OAuth Admin Permissions
# Comma-separated list of email addresses that should have admin privileges
OAUTH_ADMIN_EMAILS=admin@example.com,admin2@example.com
# OIDC group name for admins (e.g., "app-admins")
OAUTH_ADMIN_GROUP=

# Feature Toggles
# Enable/disable specific features (true/false)
# When disabled: routes return 404, navigation links are hidden
# Database data remains unchanged
ENABLE_CARDS=true
ENABLE_VOUCHERS=true
ENABLE_GIFT_CARDS=true

# Authentication Toggles
# Enable/disable authentication methods
ENABLE_LOCAL_LOGIN=true       # Set to false to disable email/password login (OAuth only)
ENABLE_REGISTRATION=true      # Set to false to disable user registration
